server {
    listen 80;
    rewrite        ^ https://$host$request_uri? permanent;
}

upstream app-cli {
  server 127.0.0.1:4040;
}

server {
  listen 443 ssl;
  server_name <%= "cli.#{File.read('/etc/spin/machine/fqdn')}" %>;

  access_log <%= access_log %>;
  error_log <%= error_log %>;

  ssl_certificate <%= ssl_certificate %>;
  ssl_certificate_key <%= ssl_certificate_key %>;

  include /etc/openresty/conf.inc.d/proxy.inc.conf;

  location / {
      proxy_pass http://app-cli;
  }
}

