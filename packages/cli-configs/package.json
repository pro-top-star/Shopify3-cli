{
  "name": "@shopify/cli-configs",
  "version": "0.6.0",
  "private": false,
  "description": "Base configuration files to configure the tools the CLI depends on (e.g. ESLint, Babel)",
  "keywords": [
    "shopify",
    "shopify-cli",
    "shopify-partners"
  ],
  "license": "MIT",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "/npm-shrinkwrap.json"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "build:watch": "tsc -b --watch",
    "prepublishOnly": "yarn run build",
    "lint": "prettier -c src/** && eslint src/**",
    "lint:fix": "prettier src/** && eslint src/** --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc": "tsc -b --incremental"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {},
  "engine-strict": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ]
}
