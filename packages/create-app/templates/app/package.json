{
  "name": "{{app_name}}",
  "version": "0.0.0",
  "description": "{{description}}",
  "main": "home/index.js",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b tsconfig.dist.json",
    "build:watch": "tsc -b tsconfig.dist.json --watch",
    "lint": "prettier -c src/** && eslint src/**",
    "lint:fix": "prettier src/** && eslint src/** --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc": "tsc -b --incremental"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@shopify/cli"
    ]
  },
  "dependencies": {
    "@shopify/cli": "{{shopify_cli_version}}"
  },
  "devDependencies": {},
  "author": "{{author}}"
}
