{
  "name": "{{name}}",
  "version": "0.1.0",
  "main": "home/index.js",
  "license": "UNLICENSED",
  "scripts": {
    {% if dependency_overrides and dependency_manager == "npm"  %}"preinstall": "npx npm-force-resolutions",{% endif %}
    "shopify": "shopify",
    "build": "shopify app build",
    "dev": "shopify app dev",
    "test": "shopify app test",
    "push": "shopify app push",
    "scaffold": "shopify app scaffold"
  },
  "dependencies": {
    "@shopify/cli": "{{shopify_cli_version}}",
    "@shopify/app": "{{shopify_app_version}}",
    "react": "17.0.2"
  },
  {% if dependency_overrides %}
  "overrides": {
    {% for dependency in dependency_overrides %}
      "{{dependency[0]}}": "{{dependency[1]}}"{% unless forloop.last %},{% endunless %}
    {% endfor %}
  },
  "resolutions": {
    {% for dependency in dependency_overrides %}
      "{{dependency[0]}}": "{{dependency[1]}}"{% unless forloop.last %},{% endunless %}
    {% endfor %}
  },
  {% endif %}
  "author": "{{author}}"
}
