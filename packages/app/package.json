{
  "name": "@shopify/app",
  "version": "0.5.2",
  "private": true,
  "description": "Utilities for loading, building, and publishing apps.",
  "type": "module",
  "files": [
    "/dist",
    "/npm-shrinkwrap.json"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "true",
    "lint": "prettier -c src/** && eslint src/**/*.ts",
