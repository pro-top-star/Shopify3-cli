{
  "name": "@shopify/app",
  "version": "0.5.2",
  "description": "Utilities for loading, building, and publishing apps.",
  "type": "module",
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "shx rm -rf dist && rollup -c",
    "prepack": "cross-env NODE_ENV=production yarn run build",
    "lint": "prettier -c src/** && eslint src/**/*.ts",
    "lint:fix": "prettier -w src/** && eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {},
  "peerDependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5",
    "@shopify/cli-kit": "0.12.0"
  },
  "devDependencies": {
    "@shopify/cli-testing": "0.1.0"
  },
  "oclif": {
    "commands": "dist/commands"
  }
}
