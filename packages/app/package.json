{
  "name": "@shopify/app",
  "version": "0.5.2",
  "private": true,
  "description": "Utilities for loading, building, and publishing apps.",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "/templates",
    "/dist",
    "/npm-shrinkwrap.json"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "shx rm -rf dist && tsc -b tsconfig.dist.json",
    "build:watch": "tsc -b tsconfig.dist.json --watch",
    "prepublishOnly": "yarn run build",
    "lint": "prettier -c src/** && eslint src/**",
    "lint:fix": "prettier src/** && eslint src/** --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc": "tsc -b --incremental"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@shopify/core": "0.5.2",
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5"
  },
  "oclif": {
    "commands": "./dist/commands",
    "plugins": []
  }
}
