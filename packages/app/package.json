    "test": "shx rm -rf dist && vitest run",
    "test:watch": "vitest watch",
    "tsc": "tsc -b"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5",
    "fast-glob": "^3.2.11",
    "toml": "^3.0.0",
    "zod": "^3.11.6"
  },
  "peerDependencies": {
    "@shopify/cli-kit": "0.5.2",
    "@shopify/support": "0.5.2"
  },
  "devDependencies": {
    "@shopify/cli-kit": "0.12.0",
    "@shopify/cli-testing": "0.1.0"
  }
}
