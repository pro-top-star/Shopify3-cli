{
  "name": "shopify-cli-extensions",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "make build && make build-debug",
    "clean": "lerna run clean",
    "deploy": "lerna publish from-package --yes",
    "start": "cd packages/dev-console-app; yarn start",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "make go-test",
    "test:integration": "make integration-test",
    "version-bump": "lerna version --no-push --include-merged-tags",
    "lint": "gofmt -s .",
    "lint:fix": "gofmt -w -s ."
  },
  "devDependencies": {
    "@shopify/shopify-cli-extensions": "0.2.3"
  }
}

