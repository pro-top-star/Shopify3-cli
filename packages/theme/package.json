{
  "name": "@shopify/theme",
  "version": "0.5.2",
  "private": true,
  "description": "Utilities building and publishing themes",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "/dist",
    "/npm-shrinkwrap.json"
  ],
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b tsconfig.dist.json",
    "build:watch": "tsc -b tsconfig.dist.json --watch",
    "prepublishOnly": "yarn run build",
    "lint": "prettier -c src/** && eslint src/**",
    "lint:fix": "prettier src/** && eslint src/** --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc": "tsc -b --incremental"
  },
  "eslintConfig": {
    "extends": [
      "../../package.json"
    ]
  },
  "dependencies": {
    "@oclif/core": "^1",
    "@oclif/plugin-help": "^5"
  },
  "devDependencies": {
    "@shopify/core": "0.5.2"
  },
  "oclif": {
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ]
  }
}
