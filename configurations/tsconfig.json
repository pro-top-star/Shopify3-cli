{
  "extends": "@shopify/typescript-configs/base.json",
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "declaration": true,
    "inlineSourceMap": true,
    "isolatedModules": false
  },
  "exclude": ["**/dist/**"]
}
